{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "syllable-game",
  "permissions": {
    "reddit": {
      "enable": true,
      "asUser": [
        "SUBMIT_COMMENT"
      ]
    }
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "game": {
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "syllable-game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "syllable_game_dev"
  },
  "scheduler": {
    "tasks": {
      "daily-challenge": {
        "endpoint": "/internal/scheduler/create-game-post",
        "cron": "0 0 * * *"
      }
    }
  }
}
